<h1>Neilson Cattle Company</h1>
<h2>Purebred Charolais 2-yr-old Bulls</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Dob</th>
      <th>Weight</th>
      <th>Scrotum</th>
      <th>Sire</th>
      <th>Dam</th>
      <% if current_user.try(:admin?) %>
        <th>Admin Controls</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @bulls.each do |bull| %>
      <tr>
        <td><%= link_to bull.name, bull, :class => "btn btn-default" %></td>
        <td><%= bull.tag %></td>
        <td><%= bull.dob %></td>
        <td><%= bull.weight %></td>
        <td><%= bull.scrotum %></td>
        <td><%= bull.sire %></td>
        <td><%= bull.dam %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_bull_path(bull), :class => "btn btn-success" %>
          <%= link_to 'Delete', bull, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
  <%= link_to 'New Bull', new_bull_path, :class => "btn btn-success" %>
<% end %>
