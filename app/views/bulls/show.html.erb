    <% if ss %>
      &nbsp;&nbsp;<%= ss.name %><br>
      <%# great grandfather 1 %>
      <% sss = ss.sire %>
      <% if sss %>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= sss.name %><br>
      <% end %>
      <%# great grandmother 1 %>
      <% ssd = ss.dam %>
      <% if ssd %>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= ssd.name %><br>
      <% end %>
    <% end %>
    <%# grandmother 1 %>
    <% sd = s.dam %>
    <% if sd %>
      &nbsp;&nbsp;<%= sd.name %><br>
      <%# great grandfather 2 %>
      <% sds = sd.sire %>
      <% if sds %>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= sds.name %><br>
      <% end %>
      <%# great grandmother 2 %>
      <% sdd = sd.dam %>
