<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @bull.name %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @bull.tag %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @bull.dob %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @bull.weight %>
</p>

<p>
  <strong>Scrotum:</strong>
  <%= @bull.scrotum %>
</p>

<p>
  <strong>Sire:</strong>
  <%= @bull.sire %>
</p>

<p>
  <strong>Dam:</strong>
  <%= @bull.dam %>
</p>

<% if current_user.try(:isAdmin?) %>
  <%= link_to 'Edit', edit_bull_path(@bull) %> |
<% end %>

<% unless @comments.empty? %>
  <h2>Your notes:</h2>
  <% @comments.each do |comment| %>
    <h4>On <%= comment.created_at %> you wrote:</h4>
    <p><%= comment.content %>
      <%= link_to 'Remove', bull_comment_path(@bull, comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %> 
    </p>
  <% end %>
<% end %>

<%#= link_to 'Back', bulls_path %>

<% if user_signed_in? %>
  <%= link_to 'Write a comment', new_bull_comment_path(@bull), :class => "btn btn-info" %>
<% end %>
